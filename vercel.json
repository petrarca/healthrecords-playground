{
    "version": 2,
    "buildCommand": "pnpm build-all",
    "outputDirectory": "dist",
    "rewrites": [
      { "source": "/developer/(.*)", "destination": "/developer/dist/$1" }
    ],
    "builds": [
      { 
        "src": "/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist"
        }
      },
      { 
        "src": "developer/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "developer/dist"
        }
      }
    ],
    "github": {
      "silent": true,
      "autoJobCancelation": true
    }
}