{
  "version": 2,
  "installCommand": "pnpm install",
  "outputDirectory": "dist",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "pnpm build",
        "outputDirectory": "dist"
      }
    },
    {
      "src": "developer/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "cd developer && pnpm install && NODE_ENV=production pnpm build && cd .. && mkdir -p dist/developer && cp -r developer/dist/* dist/developer/",
        "outputDirectory": "dist"
      }
    }
  ],
  "rewrites": [
    { "source": "/developer", "destination": "/developer/index.html" },
    { "source": "/developer/assets/:path*", "destination": "/developer/assets/:path*" },
    { "source": "/developer/:path*", "destination": "/developer/index.html" }
  ],
  "github": {
    "silent": true,
    "autoJobCancelation": true
  }
}